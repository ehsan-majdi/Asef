@model List<Asefian.Model.Context.Data.SpecialProjectFile>

<div class="uk-container">
    @if (Model.Count > 0)
    {
        <div class="uk-margin">
            @for (var i = 0; i < Model.Count(); i++)
            {
                var item = Model[i];
                if (i % 2 == 0)
                {
                    <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
                        <div class="uk-card-media-left uk-cover-container">
                            <img src="/upload/image/resize/500x500/@item.FileId/@item.FileName" alt="" uk-cover>
                            <canvas width="600" height="400"></canvas>
                        </div>
                        <div>
                            <div class="uk-card-body">
                                <h3 class="uk-card-title">@item.TranslationList.Single(x => x.LanguageId == BaseController.GetLanguage().Id).Title</h3>
                                <p>@item.TranslationList.Single(x => x.LanguageId == BaseController.GetLanguage().Id).Description</p>
                            </div>
                        </div>
                    </div>

                }
                else
                {
                    <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
                        <div class="uk-flex-last@s uk-card-media-right uk-cover-container">
                            <img src="/upload/image/500x500/@item.FileId/@item.FileName" alt="" uk-cover>
                            <canvas width="600" height="400"></canvas>
                        </div>
                        <div>
                            <div class="uk-card-body">
                                <h3 class="uk-card-title"> @item.TranslationList.Single(x => x.LanguageId == BaseController.GetLanguage().Id).Title</h3>
                                <p>@item.TranslationList.Single(x => x.LanguageId == BaseController.GetLanguage().Id).Description</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <p>@Asefian.Web.Resource.Translation.Advertisement</p>
    }
</div>
