@model List<Asefian.Model.ViewModel.Data.CategoryViewModel>
<style>
    .category-title:first-child {
        color: black;
        position: relative;
        z-index: 1;
        margin: 20px auto;
    }

    .category-title span {
        background: #fff;
        padding: 0 15px;
        font-size: 28px;
    }

        .category-title span:before {
            border-top: 1px solid black;
            content: "";
            margin: 0 auto;
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            z-index: -1;
        }

    .title-slider {
        color: black;
        text-align: center;
        margin: 0 auto;
        position: relative;
    }

    .cover {
        text-align: center;
    }

    .line-xs {
        border-bottom: solid 2px black;
        width: 100%;
        display: block;
        margin: auto;
    }

    .header-title {
        border-radius: 2px;
        display: inline-block;
        padding: 10px;
        color: #6c5713;
    }

    @@media only screen and (max-width: 768px) {
        .title-slider {
            color: black;
            border-radius: 5px;
        }
    }

    .line-hide {
        position: absolute;
        width: 100%;
        margin: -4px;
    }

    .cover:hover .line {
        animation: increase 1s;
        border: solid 1px black;
        margin: auto;
        transition: all 1s;
        width: 100%;
    }

    @@keyframes increase {
        0% {
            width: 0%;
        }

        100% {
            width: 100%;
        }
    }
</style>
