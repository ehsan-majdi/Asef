@model List<Asefian.Model.Context.Core.Slider>
<style>
    /*.uk-position-center-left svg {
        color: black;
    }

    .uk-position-center-right svg {
        color: black;
    }*/
</style>
@if (Model.Count > 0)
{
    <div class="uk-position-relative uk-visible-toggle uk-light bold-icon" tabindex="-1" uk-slideshow="autoplay:true ; autoplay-interval: 4000; animation:slide">
        <ul class="uk-slideshow-items">
            @foreach (var item in Model)
            {
                <li>
                    <img src="/upload/image/resize/1000x1000/@item.FileId/@item.FileName" alt="asefian" uk-cover>
                </li>
            }
        </ul>
        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
    </div>
}
