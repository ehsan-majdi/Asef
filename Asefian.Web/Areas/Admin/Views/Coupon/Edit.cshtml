<div class="uk-container">
    <div class="subheader">
        <ul class="uk-breadcrumb">
            <li><a href="/admin/dashboard"><i class="fas fa-home"></i></a></li>
            <li><a href="/admin/coupon/list">لیست کد تخفیف</a></li>
            @if (ViewBag.Id != null)
            {
                <li><a href="/admin/coupon/edit/@ViewBag.Id">ویرایش کد تخفیف</a></li>
            }
            else
            {
                <li><a href="/admin/coupon/add">کد تخفیف جدید</a></li>
            }
        </ul>
    </div>

    <div class="content">
        <div class="uk-grid-small uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-flex-center" uk-grid>
            <form id="frmCoupon" class="form" action="/admin/coupon/save" data-load="/admin/coupon/load" method="post" data-success="saveComplete" loader="1" data-load-success="loadComplete">

                <input type="hidden" name="id" value="@ViewBag.Id" lock />

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbType">نوع</label>
                    <div class="uk-form-controls">
                        <select id="cmbType" class="uk-select" name="typeId" data-validate="required">
                            <option value="">...</option>
                            <option value="1">مبلغ</option>
                            <option value="2">درصد</option>
                        </select>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtValue">مقدار</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-sort-numeric-down"></i></span>
                            <input id="txtTitle" class="uk-input number-only money-separator" type="text" name="value" data-validate="required, number" />
                        </div>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtUsableCount">تعداد قابل استفاده</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-sort"></i></span>
                            <input id="txtUsableCount" class="uk-input number-only money-separator" type="tel" name="usableCount" data-validate="number" value="1" />
                        </div>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtFromDatePersian">شروع از تاریخ</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-calendar"></i></span>
                            <input id="txtFromDatePersian" class="uk-input number-only" type="tel" name="fromDatePersian" />
                        </div>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtToDatePersian">تاریخ انقضای کارت</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-calendar"></i></span>
                            <input id="txtToDatePersian" class="uk-input number-only" type="tel" name="toDatePersian" />
                        </div>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbStatus">وضعیت</label>
                    <div class="uk-form-controls">
                        <select id="cmbStatus" class="uk-select" name="statusId" data-validate="required">
                            <option value="">...</option>
                            <option value="1">فعال</option>
                            <option value="2">غیرفعال</option>
                        </select>
                    </div>
                </div>

                @if (ViewBag.Id == null)
                {
                    <div>
                        <span class="more" style="cursor: pointer; padding-right: 5px; font-size: 12px;">بیشتر...</span>
                    </div>

                    <div class="uk-margin more-item hide">
                        <label class="uk-form-label" for="txtPrefix">پیشوند برای کد تخفیف</label>
                        <div class="uk-form-controls">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon"><i class="fal fa-font"></i></span>
                                <input id="txtPrefix" class="uk-input" type="text" name="prefix" data-validate="english" />
                            </div>
                        </div>
                    </div>

                    <div class="uk-margin more-item hide">
                        <label class="uk-form-label" for="txtCodeCount">تعداد کاراکتر کد تخفیف</label>
                        <div class="uk-form-controls">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon"><i class="fal fa-sort"></i></span>
                                <input id="txtCodeCount" class="uk-input number-only money-separator" type="tel" name="codeCount" data-validate="required, number" value="10" />
                            </div>
                        </div>
                    </div>

                    <div class="uk-margin more-item hide">
                        <label class="uk-form-label" for="txtCount">تعداد</label>
                        <div class="uk-form-controls">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon"><i class="fal fa-sort"></i></span>
                                <input id="txtCount" class="uk-input number-only money-separator" type="tel" name="count" data-validate="required, number" value="1" />
                            </div>
                        </div>
                    </div>
                }

                <div class="uk-margin">
                    <button id="btnSubmit" type="submit" class="uk-button uk-button-primary uk-width-1-1">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="/scripts/app/coupon/app.save.js"></script>
}