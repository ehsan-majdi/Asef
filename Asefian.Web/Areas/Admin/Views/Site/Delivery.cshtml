@model Asefian.Model.Context.Data.ProductFilter
@{
    ViewBag.Title = "لیست شهرهای تحت پوشش پیک";
}
<link href="/styles/app/app.product-filter.css" rel="stylesheet" />

<div class="uk-container">
    <div class="subheader">
        <ul class="uk-breadcrumb">
            <li><a href="/admin/dashboard"><i class="fas fa-home"></i></a></li>
            <li><a href="/admin/site/settings">تنظیمات سایت</a></li>
            <li>لیست شهرهای تحت پوشش پیک</li>
        </ul>
    </div>
    <div class="content relative">
        <form class="uk-margin">
            <select id="cmbProvince" class="uk-select w200" data-url="/location/province/@Asefian.Model.Metadata.AsefianMetadata.IranIdKey" name="provinceId" data-validate="required">
                <option value="">...</option>
            </select>
            <select id="cmbCity" class="uk-select w200" data-validate="required" name="cityId">
                <option value="">...</option>
            </select>

            <button type="submit" id="btnAddValue" class="uk-button uk-button-primary"><i class="far fa-plus v-middle"></i>&nbsp; اضافه کردن</button>
        </form>

        <div id="list" class="m-top-20" data-url="/admin/site/getCityDeliveryList"></div>

    </div>
</div>

@section scripts{
    <script type="text/javascript" src="/scripts/app/site/app.delivery.js"></script>

    <script id="template" type="text/x-jsrender">
        {{if list.length > 0}}
        <div>
            <table class="uk-table uk-table-striped">
                <thead>
                    <tr>
                        <th>نام</th>
                        <th class="txt-al-c w85">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    {{for list}}
                    <tr>
                        <td class="txt-al-r">
                            <div class="col-pad-top">{{:title}}</div>
                        </td>
                        <td class="txt-al-c">
                            <a href="#" class="delete" data-delete-url="/admin/site/removeDelivery/{{:id}}" uk-tooltip="حذف"><i class="far fa-trash-alt operation-icon red"></i></a>
                        </td>
                    </tr>
                    {{/for}}
                </tbody>
            </table>
        </div>
        {{else}}
        <h5 class="txt-al-c">موردی یافت نشد.</h5>
        {{/if}}
    </script>

}