<div class="uk-container">
    <div class="subheader">
        <ul class="uk-breadcrumb">
            <li><a href="/admin/dashboard"><i class="fas fa-home"></i></a></li>
            <li><a href="/admin/category/tree">لیست دسته بندی ها</a></li>
            <li><a href="/admin/category/feature/@ViewBag.CategoryId">ویژگی ها</a></li>
            @if (ViewBag.Id != null)
            {
                <li><a href="/admin/category/filterEdit/@ViewBag.Id">ویرایش ویژگی</a></li>
            }
            else
            {
                <li><a href="/admin/category/filterAdd/@ViewBag.CategoryId">ویژگی جدید</a></li>
            }
        </ul>
    </div>

    <div class="content">
        <div class="uk-grid-small uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-flex-center" uk-grid>
            <form id="frmCategoryFeature" class="form" action="/admin/category/featureSave" data-load="/admin/category/featureLoad" method="post" data-success="saveComplete" loader="1">

                <input type="hidden" name="id" value="@ViewBag.Id" lock />
                <input id="hiddenCategoryId" type="hidden" name="categoryId" value="@ViewBag.CategoryId" />

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtTitle">عنوان</label>
                    <div class="uk-form-controls">
                        <input id="txtTitle" class="uk-input" type="text" name="title" data-validate="required, Persian" />
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbType">نوع</label>
                    <div class="uk-form-controls">
                        <select id="cmbType" class="uk-select" name="typeId" data-validate="required">
                            <option value="">...</option>
                            <option value="1">انتخابی</option>
                            <option value="2">کشویی</option>
                            <option value="3">رنگ</option>
                        </select>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbStatus">وضعیت</label>
                    <div class="uk-form-controls">
                        <select id="cmbStatus" class="uk-select" name="statusId" data-validate="required">
                            <option value="">...</option>
                            <option value="1">فعال</option>
                            <option value="2">غیرفعال</option>
                        </select>
                    </div>
                </div>

                <div class="uk-margin">
                    <button id="btnSubmit" type="submit" class="uk-button uk-button-primary uk-width-1-1">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="/scripts/app/category/app.feature.save.js"></script>
}