<div class="uk-container">
    <div class="subheader">
        <ul class="uk-breadcrumb">
            <li><a href="/admin/dashboard"><i class="fas fa-home"></i></a></li>
            <li><a href="/admin/article/list">لیست مقالات</a></li>
            <li><a href="/admin/article/category/tree">لیست دسته بندی ها</a></li>
            @if (ViewBag.Id != null)
            {
                <li><a href="/admin/article/category/edit/@ViewBag.Id">ویرایش دسته بندی</a></li>
            }
            else
            {
                <li><a href="/admin/article/category/add">دسته بندی جدید</a></li>
            }
        </ul>
    </div>

    <div class="content">
        <div class="uk-grid-small uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-flex-center" uk-grid>
            <form id="frmCategory" class="form" action="/admin/article/category/save" data-load="/admin/article/category/load" method="post" data-success="saveComplete" loader="1">

                <input type="hidden" name="id" value="@ViewBag.Id" lock />

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbParent">دسته بندی پدر</label>
                    <div class="uk-form-controls">
                        <select id="cmbParent" class="uk-select" name="parentId" data-url="/admin/article/category/select"></select>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtTitle">عنوان</label>
                    <div class="uk-form-controls">
                        <input id="txtTitle" class="uk-input" type="text" name="title" data-validate="required, Persian" />
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtEnglishTitle">عنوان لاتین</label>
                    <div class="uk-form-controls">
                        <input id="txtEnglishTitle" class="uk-input" type="text" name="englishTitle" data-validate="required" />
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtOrder">ترتیب</label>
                    <div class="uk-form-controls">
                        <input id="txtOrder" class="uk-input" type="text" name="order" data-validate="required, number" />
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbStatus">وضعیت</label>
                    <div class="uk-form-controls">
                        <select id="cmbStatus" class="uk-select" name="statusId" data-validate="required">
                            <option value="">...</option>
                            <option value="1">فعال</option>
                            <option value="2">غیرفعال</option>
                        </select>
                    </div>
                </div>

                <div class="uk-margin">
                    <button id="btnSubmit" type="submit" class="uk-button uk-button-primary uk-width-1-1">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="/scripts/app/article-category/app.save.js"></script>
}