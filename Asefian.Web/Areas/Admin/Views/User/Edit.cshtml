<div class="uk-container">
    <div class="subheader">
        <ul class="uk-breadcrumb">
            <li><a href="/admin/dashboard"><i class="fas fa-home"></i></a></li>
            <li><a href="/admin/user/list">لیست کاربران</a></li>
            @if (ViewBag.Id != null)
            {
                <li><a href="/admin/user/edit/@ViewBag.Id">ویرایش کاربر</a></li>
            }
            else
            {
                <li><a href="/admin/user/add">کاربر جدید</a></li>
            }
        </ul>
    </div>

    <div class="content">
        <div class="uk-grid-small uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-flex-center" uk-grid>
            <form id="frmUser" class="form" action="/admin/user/save" data-load="/admin/user/load" method="post" data-success="saveComplete" loader="1">

                <input id="hiddenId" type="hidden" name="id" value="@ViewBag.Id" lock />

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtFirstName">نام</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-user"></i></span>
                            <input id="txtFirstName" class="uk-input" type="text" name="firstName" data-validate="required, PersianText" />
                        </div>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtLastName">نام خانوادگی</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-users"></i></span>
                            <input id="txtLastName" class="uk-input" type="text" name="lastName" data-validate="required, PersianText" />
                        </div>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtMobileNumber">تلفن همراه</label>
                    <div class="uk-form-controls relative">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-mobile-android"></i></span>
                            <input id="txtMobileNumber" class="uk-input" type="tel" name="mobileNumber" data-validate="mobileNumber" />
                        </div>
                        <div id="loaderMobileNumber" class="form-controls-spinner" uk-spinner></div>
                        <span id="mobileValid" class="valid-icon"><i class="far fa-check"></i></span>
                        <span id="mobileInvalid" class="invalid-icon"><i class="far fa-times"></i></span>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="txtEmail">ایمیل</label>
                    <div class="uk-form-controls relative">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon"><i class="fal fa-envelope"></i></span>
                            <input id="txtEmail" class="uk-input" type="email" name="email" data-validate="email" />
                        </div>
                        <div id="loaderEmail" class="form-controls-spinner" uk-spinner></div>
                        <span id="emailValid" class="valid-icon"><i class="far fa-check"></i></span>
                        <span id="emailInvalid" class="invalid-icon"><i class="far fa-times"></i></span>
                    </div>
                </div>

                @if (ViewBag.Id == null)
                {
                    <div class="uk-margin">
                        <label class="uk-form-label" for="txtPassword">رمزعبور</label>
                        <div class="uk-form-controls">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon"><i class="fal fa-key"></i></span>
                                <input id="txtPassword" class="uk-input" type="password" name="password" data-validate="required, minLength(6)" />
                            </div>
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="txtConfirmPassword">تکرار رمزعبور</label>
                        <div class="uk-form-controls">
                            <div class="uk-inline uk-width-1-1">
                                <span class="uk-form-icon"><i class="fal fa-key"></i></span>
                                <input id="txtConfirmPassword" class="uk-input" type="password" name="confirmPassword" data-validate="required, minLength(6)" />
                            </div>
                        </div>
                    </div>
                }

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbSex">جنسیت</label>
                    <div class="uk-form-controls">
                        <select id="cmbSex" class="uk-select" name="sex" data-validate="required">
                            <option value="">...</option>
                            <option value="1">آقا</option>
                            <option value="2">خانم</option>
                        </select>
                    </div>
                </div>

                <div class="uk-margin">
                    <label class="uk-form-label" for="cmbStatus">وضعیت</label>
                    <div class="uk-form-controls">
                        <select id="cmbStatus" class="uk-select" name="statusId" data-validate="required">
                            <option value="">...</option>
                            <option value="1">فعال</option>
                            <option value="2">غیرفعال</option>
                        </select>
                    </div>
                </div>

                <div class="uk-margin">
                    <button id="btnSubmit" type="submit" class="uk-button uk-button-primary uk-width-1-1">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="/scripts/app/user/app.save.js"></script>
}